<root>

    <sql id="df">is_deleted = false</sql>

    <select id="countSupplier">
        select * from supplier where 1=1
        <if test="isNotNull(name)">
            and name = ^{name} and ${df}
            <else>
                and name is null
            </else>
        </if>
        <for target="list" space="," prefix="and in(" suffix=")">
            #{item}
        </for>
        <for target="map" space="and" prefix="and" suffix="xxx">
            #{item} = #{val}
        </for>
        <include id="df"/>
    </select>


</root>